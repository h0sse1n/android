<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20FFFFFF" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#E36424" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/list_btn"
            android:src="@drawable/ic_list_white_24dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/yooz_org" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="36dp"
        android:layout_weight="0.91" >

        <ListView
            android:id="@+id/search_list"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout1"
            android:animateLayoutChanges="true"
            android:choiceMode="multipleChoice"
            android:divider="@null"
            android:gravity="right"
            android:longClickable="true"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:splitMotionEvents="@bool/abc_config_allowActionMenuItemTextWithIcon"
            android:textAlignment="gravity"
            android:textSize="20sp" >

        </ListView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#F2CAB6" >

            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:background="@drawable/search_btn_2"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_search_white_36dp" />

            <EditText
                android:id="@+id/s_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.97"
                android:ems="10"
                android:hint="عبارت خود را وارد کنید"
                android:imeOptions="actionSearch"
                 android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColorHint="#E0CCC3"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>